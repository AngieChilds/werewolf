<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= will_paginate %>

<table class="horizontal_table" style="width: 100%; height: 10px;" border="1">
<tbody>

  <tr>
    <th width="20%"  >Name</th>
     
    <th width="35%" ></th>
    <th width="15%" ></th>
    <th width="15%"></th>
    <th width="15%"></th>
    
  </tr>
</tbody>
</table>

<div id="user-list">
<% @users.each do |user| %>
  <table class="horizontal_table" style="width: 100%; height: 10px;" border="1" cellspacing="0">
<tbody>


  <tr valign="top" class="<%= cycle('list-line-odd', 'list-line-even') %>" >
    <td width="20%" ><%= link_to user.name, user %></td>
    <% if current_user.admin? && !current_user?(user) %>
    <td width="35%"><%= user.email %></td>
    <td width="15%"><%= user.admin %></td>
    <td width="15%"><%= link_to 'Change admin rights', more_user_path(user), method: :patch,
                                  data: { confirm: "You sure this must be admin?" }%></td>
   <td width="15%" ><%= link_to 'X', user, method: :delete,
      data: { confirm: "You sure you want to remove user?" } %></td>
  </tr>
<% end %>
  <% end %>
</tbody>
</table>
</div>

<%= will_paginate %>

